{% extends 'WebProfilerBundle:Profiler:layout.html.twig' %}

{% block toolbar %}
    {% set icon %}
    <span class="icon">{{ include('@DrawIonicPusher/Icon/ionic.svg') }}</span>
    <span class="sf-toolbar-status">Ionic Push</span>
    {% endset %}

    {% set text %}
    {# this is the content displayed when hovering the mouse over
       the toolbar panel #}
    <div class="sf-toolbar-info-piece">
        <b>Requests</b>
        <span>{{ collector.requests|length }}</span>
    </div>
    {% endset %}

    {{ include('@WebProfiler/Profiler/toolbar_item.html.twig', { link: true }) }}
{% endblock %}

{% block head %}
   {{ parent() }}
{% endblock %}

{% block menu %}
    {# This left-hand menu appears when using the full-screen profiler. #}
    <span class="label">
        <span class="icon">{{ include('@DrawIonicPusher/Icon/ionic.svg') }}</span>
        <strong>Ionic Push</strong>
    </span>
{% endblock %}

{% block panel %}
    <h2>Requests</h2>
    <table>
        <tr>
            <th>Profile</th><th>Tokens</th><th>Notifications</th><th>Response</th>
        </tr>

        {% for request in collector.requests %}
            <tr>
                <td>{{ request.profile }}</td>
                <td>
                    <ul>
                        {% for token in request.tokens %}
                        <li>{{ token }}</li>
                        {% endfor %}
                    </ul>
                </td>
                <td>
                    <pre>
{{ request.notification|json_encode(constant('JSON_PRETTY_PRINT')) }}
                    </pre>
                </td>
                <td>
                    <pre>
{{ request.result|json_encode(constant('JSON_PRETTY_PRINT')) }}
                    </pre>
                </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}